{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "noEmit": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./coverage",
    "./dist",
    "__tests__",
    "jest.config.js"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}